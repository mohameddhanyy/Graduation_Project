@model Animals

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalName)
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalAge)
        </dd>

        <dt class="col-sm-2">
            Status with Kids
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusWithKid)
        </dd>

        <dt class="col-sm-2">
            Status with Animals
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusWithAnimal)
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Name)
        </dd>


        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalLocation)
        </dd>

        <dt class="col-sm-2">
            Medical Need
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalMedicalNeed)
        </dd>

        <dt class="col-sm-2">
            Activity Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnaimalActivityLevel)
        </dd>

        <dt class="col-sm-2">
            Peed Need
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnaimalPeeped)
        </dd>

        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnaimalGender)
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.AnimalIamge" alt="Animal Image" style="max-width: 200px; max-height: 200px;" />
        </dd>


    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
