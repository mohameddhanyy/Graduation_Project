@{
}
@model Admin
@{
    ViewData["Title"] = "Admin Profile";
}

<div class="container mt-5">
    <h1>Admin Profile</h1>

    <div class="card">
        <div class="card-body">
            <div class="text-center">
                <img src="~/images/@Model.AdminImage" alt="Admin Image" class="img-fluid rounded-circle" style="max-width: 150px; max-height: 150px;" />
            </div>

            <dl class="row mt-3">
                <dt class="col-sm-3">First Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdFristName)</dd>

                <dt class="col-sm-3">Last Name:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdLastName)</dd>

                <dt class="col-sm-3">Location:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdLocation)</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdPhone)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdEmail)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit Profile</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
