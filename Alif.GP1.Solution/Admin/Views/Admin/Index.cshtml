@{
}
@model IEnumerable<Admin>
@{
    ViewData["Title"] = "Admins Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Admins</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Location</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AdFristName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AdLastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AdLocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.AdPhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.AdEmail)</td>
                    <td>
                        <img src="~/images/@item.AdminImage" alt="Admin Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
